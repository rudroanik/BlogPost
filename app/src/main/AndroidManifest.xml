<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.technext">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TechNext">
        <activity android:name=".ui.activity.EditActivity"
            android:label="Edit Post"></activity>
        <activity
            android:name=".ui.activity.AddBlogPost"
            android:label="Add Post" />
        <activity
            android:name=".ui.activity.BlogPostDetailsActivity"
            android:label="Details" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>